<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AutoresActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="16dp"
        android:src="@drawable/eu"
        android:id="@+id/img1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="@id/img1"
        android:textSize="18sp"
        android:id="@+id/text1"
        android:text="João Gabriel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        android:id="@+id/emailJoao"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text2"
        app:layout_constraintBottom_toBottomOf="@id/text2"
        android:id="@+id/emailSergio"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text3"
        app:layout_constraintBottom_toBottomOf="@id/text3"
        android:id="@+id/emailGerson"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text4"
        app:layout_constraintBottom_toBottomOf="@id/text4"
        android:id="@+id/emailVitor"
        android:background="@drawable/ic_email_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img2"
        app:layout_constraintTop_toBottomOf="@id/img1"
        android:layout_margin="16dp"
        android:src="@drawable/serg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        app:layout_constraintStart_toEndOf="@id/img2"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintBottom_toBottomOf="@id/img2"
        android:textSize="18sp"
        android:id="@+id/text2"
        android:text="Sergio Aquiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="16dp"
        android:id="@+id/img3"
        android:src="@drawable/gers"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img3"
        app:layout_constraintTop_toTopOf="@id/img3"
        app:layout_constraintBottom_toBottomOf="@id/img3"
        android:textSize="18sp"
        android:id="@+id/text3"
        android:text="Gerson Barbosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/img3"
        android:id="@+id/img4"
        android:src="@drawable/vit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img4"
        app:layout_constraintTop_toTopOf="@id/img4"
        app:layout_constraintBottom_toBottomOf="@id/img4"
        android:textSize="18sp"
        android:id="@+id/text4"
        android:text="Vitor Simões"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>